{
  "name": "@fumadocs/mdx-remote",
  "version": "0.2.2",
  "description": "The remote MDX files adapter for Fumadocs",
  "keywords": [
    "NextJs",
    "Docs",
    "fumadocs",
    "next-mdx-remote"
  ],
  "homepage": "https://fumadocs.vercel.app",
  "repository": "github:fuma-nama/fumadocs",
  "license": "MIT",
  "author": "Fuma Nama",
  "type": "module",
  "exports": {
    "./github": {
      "import": "./dist/github/index.js",
      "types": "./dist/github/index.d.ts"
    },
    "./github/next": {
      "import": "./dist/github/next/index.js",
      "types": "./dist/github/next/index.d.ts"
    },
    "./github/dev": {
      "import": "./dist/github/dev/index.js",
      "types": "./dist/github/dev/index.d.ts"
    },
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "github": [
        "./dist/github/index.d.ts"
      ],
      "github/next": [
        "./dist/github/next/index.d.ts"
      ],
      "github/dev": [
        "./dist/github/dev/index.d.ts"
      ]
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.1",
    "bufferutil": "^4.0.8",
    "chokidar": "^4.0.1",
    "fast-glob": "^3.3.1",
    "gray-matter": "^4.0.3",
    "micromatch": "^4.0.8",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/mdx": "^2.0.13",
    "@types/micromatch": "^4.0.9",
    "@types/node": "22.7.4",
    "@types/react": "^18.3.10",
    "@types/ws": "^8.5.12",
    "eslint-config-custom": "workspace:*",
    "fumadocs-core": "workspace:*",
    "next": "15.0.0-rc.0",
    "tsconfig": "workspace:*",
    "unified": "^11.0.5",
    "vfile": "^6.0.3"
  },
  "peerDependencies": {
    "fumadocs-core": "^13.2.1",
    "next": "14.x.x || 15.x.x",
    "react": ">= 18"
  },
  "publishConfig": {
    "access": "public"
  }
}
