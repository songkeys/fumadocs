{
  "name": "fumadocs-core",
  "version": "13.4.10",
  "description": "The library for building a documentation website in Next.js",
  "keywords": [
    "NextJs",
    "Docs"
  ],
  "homepage": "https://fumadocs.vercel.app",
  "repository": "github:fuma-nama/fumadocs",
  "license": "MIT",
  "author": "Fuma Nama",
  "type": "module",
  "exports": {
    "./sidebar": {
      "import": "./dist/sidebar.js",
      "types": "./dist/sidebar.d.ts"
    },
    "./breadcrumb": {
      "import": "./dist/breadcrumb.js",
      "types": "./dist/breadcrumb.d.ts"
    },
    "./toc": {
      "import": "./dist/toc.js",
      "types": "./dist/toc.d.ts"
    },
    "./search/client": {
      "import": "./dist/search/client.js",
      "types": "./dist/search/client.d.ts"
    },
    "./search/server": {
      "import": "./dist/search/server.js",
      "types": "./dist/search/server.d.ts"
    },
    "./search/algolia": {
      "import": "./dist/search/algolia.js",
      "types": "./dist/search/algolia.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./source": {
      "import": "./dist/source/index.js",
      "types": "./dist/source/index.d.ts"
    },
    "./utils/use-on-change": {
      "import": "./dist/utils/use-on-change.js",
      "types": "./dist/utils/use-on-change.d.ts"
    },
    "./link": {
      "import": "./dist/link.js",
      "types": "./dist/link.d.ts"
    },
    "./mdx-plugins": {
      "import": "./dist/mdx-plugins/index.js",
      "types": "./dist/mdx-plugins/index.d.ts"
    },
    "./i18n": {
      "import": "./dist/i18n/index.js",
      "types": "./dist/i18n/index.d.ts"
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.5.4",
    "@orama/orama": "^2.1.1",
    "@shikijs/rehype": "^1.21.0",
    "@shikijs/transformers": "^1.21.0",
    "github-slugger": "^2.0.0",
    "hast-util-to-estree": "^3.1.0",
    "image-size": "^1.1.1",
    "negotiator": "^0.6.3",
    "react-remove-scroll": "^2.6.0",
    "remark": "^15.0.0",
    "remark-gfm": "^4.0.0",
    "scroll-into-view-if-needed": "^3.1.0",
    "shiki": "^1.21.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@algolia/client-search": "4.24.0",
    "@mdx-js/mdx": "^3.0.1",
    "@types/estree-jsx": "^1.0.5",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.3",
    "@types/negotiator": "^0.6.3",
    "@types/node": "22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "algoliasearch": "4.24.0",
    "eslint-config-custom": "workspace:*",
    "mdast-util-mdx-jsx": "^3.1.3",
    "mdast-util-mdxjs-esm": "^2.0.1",
    "next": "15.0.0-rc.0",
    "remark-mdx": "^3.0.1",
    "remark-rehype": "^11.1.1",
    "tsconfig": "workspace:*",
    "unified": "^11.0.5"
  },
  "peerDependencies": {
    "next": "14.x.x || 15.x.x",
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "optionalDependencies": {
    "algoliasearch": "4.24.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
