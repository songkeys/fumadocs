{
  "name": "fumadocs-ui",
  "version": "14.0.0",
  "description": "The framework for building a documentation website in Next.js",
  "keywords": [
    "NextJs",
    "Docs"
  ],
  "homepage": "https://fumadocs.vercel.app",
  "repository": "github:fuma-nama/fumadocs",
  "license": "MIT",
  "author": "Fuma Nama",
  "type": "module",
  "exports": {
    "./style.css": "./dist/style.css",
    "./image-zoom.css": "./dist/image-zoom.css",
    "./tailwind-plugin": {
      "import": "./dist/tailwind-plugin.js",
      "types": "./dist/tailwind-plugin.d.ts",
      "default": "./dist/tailwind-plugin.js"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./i18n": {
      "import": "./dist/i18n.js",
      "types": "./dist/i18n.d.ts"
    },
    "./layouts/*": {
      "import": "./dist/layouts/*.js",
      "types": "./dist/layouts/*.d.ts"
    },
    "./page": {
      "import": "./dist/page.js",
      "types": "./dist/page.d.ts"
    },
    "./provider": {
      "import": "./dist/provider.js",
      "types": "./dist/provider.d.ts"
    },
    "./mdx": {
      "import": "./dist/mdx.js",
      "types": "./dist/mdx.d.ts"
    },
    "./og": {
      "import": "./dist/og.js",
      "types": "./dist/og.d.ts"
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "pnpm build:layout && pnpm build:tailwind",
    "build:layout": "tsup",
    "build:tailwind": "postcss css/*.css --dir dist && postcss src/components/*.css --dir dist/components",
    "clean": "rimraf dist",
    "dev": "concurrently \"pnpm dev:layout\" \"pnpm dev:tailwind\"",
    "dev:layout": "tsup --watch",
    "dev:tailwind": "postcss css/*.css --dir dist --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-collapsible": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-direction": "^1.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@tailwindcss/typography": "^0.5.15",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^1.0.0",
    "fumadocs-core": "workspace:*",
    "next-themes": "^0.3.0",
    "react-medium-image-zoom": "^5.2.10",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@algolia/client-search": "4.24.0",
    "@next/eslint-plugin-next": "15.0.0-canary.171",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "algoliasearch": "4.24.0",
    "eslint-config-custom": "workspace:*",
    "fumadocs": "workspace:^",
    "lucide-react": "^0.447.0",
    "next": "15.0.0-canary.171",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-lightningcss": "^1.0.1",
    "tailwindcss": "^3.4.13",
    "tsconfig": "workspace:*"
  },
  "peerDependencies": {
    "next": "14.x.x || 15.x.x",
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "publishConfig": {
    "access": "public"
  }
}
